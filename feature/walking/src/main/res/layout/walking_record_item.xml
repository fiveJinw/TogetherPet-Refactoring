<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="305dp"
    android:layout_height="130dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/walking_start_color"
    android:layout_marginBottom="18dp">

    <TextView
        android:id="@+id/distance_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책 거리"
        android:textAppearance="@style/TogetherPetTextMedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/distance_value_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TogetherPetTextMediumBold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/distance_text_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/time_text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="산책 시간"
        android:textAppearance="@style/TogetherPetTextMedium"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/distance_value_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/time_value_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TogetherPetTextMediumBold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/time_text_item"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/time_result_red_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/time_value_item"
        app:layout_constraintStart_toStartOf="@id/time_value_item"
        android:textAppearance="@style/TogetherPetText7Red"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        />
    
    <com.kakao.vectormap.MapView
        android:id="@+id/walking_map_view"
        android:layout_width="118dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>